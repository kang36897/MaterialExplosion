<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/image_review_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <view
        class="com.curious.donkey.view.PreviewFrame"
        android:id="@+id/preview_frame"
        android:background="#cf000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include layout="@layout/component_camera_preview" />
    </view>

    <view
        android:id="@+id/shutter"
        class="com.curious.donkey.view.ShutterButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shutter"
        android:scaleType="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="64dp"
        android:layout_height="64dp" />
    </LinearLayout>

</FrameLayout>